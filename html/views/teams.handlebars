<h1>Welcome to the Team Page!</h1>
<p>Description:</p>
<p>View, Insert, and Update the Teams Information</p>
<!-- ADD A NEW TEAM -->
<div class="form insert team">
    <h2>Add a Team</h2>
    <form id="addTeam" action="/teams" method="post">
        <fieldset>
            <fieldset>
                City:<input type="text" name="team_city" required><br>
            </fieldset>
            <fieldset>
                Name:<input type="text" name="name" required><br>
            </fieldset>
            <fieldset>
                <legend>Divison</legend>
                {{#each division}}
                <input type="radio" name="division" value={{division_name}}> {{division_name}}<br>
                {{/each}}
            </fieldset>
            <fieldset>
                Arena:<input type="text" name="arena" required><br>
            </fieldset>
            <fieldset>
                Head Coach:<input type="text" name="head_coach" required><br>
            </fieldset>
            <input type="submit" value="Submit">
        </fieldset>
    </form>
</div>
<h2>View Team Information</h2>
<!-- DISPLAY ALL THE TEAMS IN A TABLE -->
<div id="teams_display" class="table teams display">
    <h2>Teams</h2>
    <table>
        <thead>
            <tr>
                <th class='hidden'>ID</th>
                <th>City</th>
                <th>Name</th>
                <th>Conference</th>
                <th>Division</th>
                <th>Arena</th>
                <th>Head Coach</th>
            </tr>
        </thead>
        <tbody>
            {{#each team}}
            <tr>
                <td class='hidden'>{{id}}</td>
                <td>{{team_city}}</td>
                <td>{{name}}</td>
                <td>{{conference}}</td>
                <td>{{division}}</td>
                <td>{{arena}}</td>
                <td>{{head_coach}}</td>
                <td><a href="/teams/{{id}}">UPDATE</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>