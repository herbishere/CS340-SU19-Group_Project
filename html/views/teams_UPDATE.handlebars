<h1>You are Currently Updating the {{team_city}} {{team_name}}</h1>
<form id="team_update" action="/teams" method="post">
    <fieldset>
        <fieldset>
            City:<input type="text" name="team_city" required value="{{team_city}}"><br>
        </fieldset>
        <fieldset>
            Name:<input type="text" name="name" required value="{{name}}"><br>
        </fieldset>
        <fieldset>
            <legend>Divison</legend>
            {{#each division}}
            <input type="radio" name="division" value={{division}}> {{division}}<br>
            {{/each}}
        </fieldset>
        <fieldset>
            Arena:<input type="text" name="arena" required value="{{arena}}"><br>
        </fieldset>
        <fieldset>
            Head Coach:<input type="text" name="head_coach" required value="{{head_coach}}"><br>
        </fieldset>
        <input type="submit" value="Submit">
    </fieldset>
</form>
</div>