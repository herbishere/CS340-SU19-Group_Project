<h2>View Endorsements for {{player_name}}</h2>
<form id="filterPlayer" action="/player_endorsements_filtered" method="post">
Player Name:
        <select name="player_ID">
            {{#each specificPlayer}}
            <option value={{player_ID}}>{{player_name}}</option>
            {{/each}}
        </select>
    <input type="submit" value="Filter" >
</form>

<div class="table display player_endorsements_filtered">
    <h2>Endorsements</h2>
    <table>
        <thead>
            <tr>
                <th>Player ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Endorsement ID</th>
                <th>Company Name</th>
                <th>Salary</th>
                <th>Years Signed</th>
                
            </tr>
        </thead>
        <tbody>
            {{#each playerEndorsementsFiltered}}
            <tr >
                <td>{{Player_ID}}</td>
                <td>{{First_Name}}</td>
                <td>{{Last_Name}}</td>
                <td>{{Endorsement_ID}}</td>
                <td>{{company_name}}</td>
                <td>{{salary}}</td>
                <td>{{years_signed}}</td>
                
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
