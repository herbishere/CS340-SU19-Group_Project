<h1>Welcome to the Players Page!</h1>


<div id="players_display" class="table players display">
    <table>
        <!-- TODO: POPULATE FROM QUERY RESULTS-->
    <thead> 
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Team ID</th>
            <th>Birthdate</th>
            <th>Points</th>
            <th>School</th>
            <th>Position</th>
            <th>Player_Year_Start</th>
            <th>Last_Year_Active</th>
        </tr>
    </thead>
        <tbody>
            {{#each player}}
            <tr>
            <td>{{id}}</td>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{team_ID}}</td>
            <td>{{birthdate}}</td>
            <td>{{points}}</td> 
            <td>{{school}}</td>
            <td>{{position}}</td> 
            <td>{{player_year_start}}</td>
            <td>{{last_year_active}}</td>
            </tr>
            {{/each}}
                
        </tbody>
    </table>
</div>
<h3>ADD PLAYER</h3>
<div class='form insert player'>
    <form id = "addPlayer" action="/players" method = "post">
        ID:
        <input type='text' name="id" required>
        First Name:
        <input type='text' name="first_name" required>
        <br>
        Last Name:
        <input type='text' name="last_name" required>
        <br>
        Team Name:
        <select name ="team_ID">
            {{#each teamsForPlayers}}
            <option value = {{id}}>{{name}}</option>
            {{/each}}
        </select>
        <br>
        Birthdate:
        <input type='text' name="birthdate" required>
        <br>
        Points:
        <input type='text' name="points" required>
        <br>
        School:
        <input type='text' name="school" required>
        <br>
        Position:
        <select>
            <option value = "Point Guard">Point Guard</option>
            <option value = "Shooting Guard">Shooting Guard</option>
            <option value = "Small Forward">Small Forward</option>
            <option value = "Power Forward">Power Forward</option>
            <option value = "Center">Center</option>
        </select>
        <br>
        Player Year Start:
        <input type='number' min = "1950" max = "2019" name="player_year_start" required>
        <br>
        Last Year Active:
        <input type='number' min = "1950" max = "2019" name="last_year_active">
        <br>
        <input type="submit" value="Submit">
    </form>
</div>